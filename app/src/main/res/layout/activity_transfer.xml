<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/backgroundHome"
    android:layout_height="match_parent">


    <include
        layout="@layout/title_bar"
        android:id="@+id/title_transfer"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_logo_transfer"
        android:id="@+id/layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/home_margin"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginRight="@dimen/home_margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        app:layout_constraintTop_toBottomOf="@+id/title_transfer"
        android:src="@drawable/banner_1_final"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcv_transfer"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginRight="@dimen/home_margin"
        android:layout_marginBottom="@dimen/margin_bottom"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="3dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>