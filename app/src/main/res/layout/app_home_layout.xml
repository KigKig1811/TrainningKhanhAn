<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/logo_vba_140_x_42" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/avatar_top"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_gravity="right|center_vertical"
                android:padding="15dp"
                app:srcCompat="@drawable/default_avt" />

            <com.vnpay.anlmk.ui.views.TextView
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:lineSpacingExtra="3sp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:text="@string/login"
                android:textColor="#ae1c3f"
                android:textSize="14sp"
                android:textStyle="bold" />
        </FrameLayout>

        <com.vnpay.anlmk.ui.views.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:lineSpacingExtra="3sp"
            android:text="@string/app_name"
            android:textColor="#ae1c3f"
            android:textSize="14sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/home_margin">

            <com.vnpay.anlmk.ui.views.HomeBannerViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <com.vnpay.anlmk.ui.views.IndicatorView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="11dip"
                android:layout_marginBottom="5dip" />
        </FrameLayout>


        <androidx.recyclerview.widget.RecyclerView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/home_margin"
            android:layout_marginBottom="15dp"
            android:background="@drawable/radius_alert"
            android:elevation="3dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>