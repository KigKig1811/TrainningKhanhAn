<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="?attr/actionBarSize">

        <FrameLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/marginTop_logo_home"
                android:layout_marginBottom="@dimen/marginBottom_logo_home"
                app:srcCompat="@drawable/logo_vba_140_x_42" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgavtar"
                android:layout_width="@dimen/width_ic_avatar"
                android:layout_height="@dimen/hight_ic_avartar"
                android:layout_gravity="right|center_vertical"
                android:padding="@dimen/padding_item"
                android:src="@drawable/default_avt"
                app:civ_circle_background_color="@color/black" />


        </FrameLayout>

        <com.vnpay.anlmk.ui.views.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_margin"
            android:text="@string/app_name"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_title"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_homefunction1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/home_margin" />


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_logo_transfer"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/home_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:src="@drawable/banner_1_final"></ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_homefunction2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/home_margin"
            android:layout_marginTop="@dimen/margin_top"
            android:layout_marginRight="@dimen/home_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:background="@drawable/radius_alert"
            />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>